<%- layout('./layouts/boilerplate') %>
<div class="container">
    <h1 class="text-center mt-3">Create new blog</h1>
    <div class="col-6 offset-3">
        <form class="needs-validation" action="/<%=user.username%>/blogs" method="post" novalidate>
            <input class="mt-3 form-control" type="text" id="title" name="blog[title]" placeholder="title" required>
            <textarea class="mt-3 mb-4 form-control" type="text" id="content" name="blog[content]" placeholder="content" required></textarea>
            <button class="btn btn-success">Create Blog</button>
        </form>
    </div>
</div>