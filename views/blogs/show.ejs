<%- layout('./layouts/boilerplate') %>
    <div class="container">
        <div class="row col-12">
            <img src="https://cdn.lifehack.org/wp-content/uploads/2015/12/11224842/Coffee.jpg" class="m-auto img-thumbnail" style="display: inline-block;" alt="">
        </div>
            <h1 class="mt-3 text-center">
                <%=blog.title%>
            </h1>
            <p class="mt-2 text-center">
                <%=blog.content%>
            </p>
            <% if(username && (username===blog.author.username)){%>
                <a class="btn btn-primary" href="/<%= username %>/blogs/<%= blog._id %>/edit">Edit</a>
                <form class="mt-3" action="/<%= username %>/blogs/<%= blog._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">Delete Blog</button>
                </form>
                <%}%>
    </div>