<%- layout('./layouts/boilerplate') %>
    <div class="container">
        <h1 class="text-center">Log In</h1>
        <div class="col-6 offset-3">
            <form class="needs-validation" action="/login" method="post" novalidate>
                <input class="mt-4 form-control" type="text" name="username" id="username" placeholder="username" required>
                <input class="mt-4 form-control" type="password" name="password" id="password" placeholder="password" required>
                <button class="mt-5 btn btn-success">Log In</button>
            </form>
        </div>
    </div>